{
  "name": "htna-tools",
  "version": "0.1.0",
  "description": "Functions collections for web applications",
  "author": "Sandro Lain",
  "main": "dist/umd/index.js",
  "browser": "dist/umd/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist/esm/*",
    "dist/umd/*"
  ],
  "scripts": {
    "build": "npx rollup -c",
    "watch": "npx rollup -cw",
    "prepare": "npm run build",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "test:coverage:open": "jest --runInBand --coverage && open ./coverage/lcov-report/index.html",
    "docs:build": "npx typedoc ./src",
    "docs:serve": "npm run docs:build && npx open-cli ./docs/typedocs/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandrolain/HTNA-tools.git"
  },
  "keywords": [
    "tools",
    "javascript",
    "typescript",
    "module",
    "html",
    "DOM",
    "CSS",
    "form",
    "fetch"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "happy-dom": "^0.12.1",
    "jest": "^25.5.0",
    "live-server": "^1.2.1",
    "open-cli": "^6.0.1",
    "rollup": "^2.7.3",
    "rollup-plugin-delete": "^1.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^25.4.0",
    "typedoc": "^0.17.6",
    "typedoc-plugin-no-inherit": "^1.1.10",
    "typescript": "^3.8.3"
  }
}
